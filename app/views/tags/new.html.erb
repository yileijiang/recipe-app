<h1>All Tags</h1>

<% @tags.each do |tag| %>
  <li><%= tag.name %></li>
  <p><%= link_to "Delete", tag_path(tag), method: :delete %></p>
<% end %>

<h1>Add New Tag</h1>

<%= simple_form_for(@tag) do |f| %>
  <%= f.input :name %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to Recipes", recipes_path %>